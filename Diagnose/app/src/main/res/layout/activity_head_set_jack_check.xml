<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_light_sensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.hyperexchange.diagnose.HeadSetJackCheck">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_alignParentTop="true"
                android:id="@+id/page_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Headset"
                    android:textSize="22sp"
                    android:textColor="@color/black9"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/page_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/pic_container1"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pic_headset"
                        android:layout_width="180dp"
                        android:src="@drawable/headphone"
                        android:layout_height="180dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/stat_container1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@+id/pic_container1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:id="@+id/touch_stat"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:id="@+id/pass_st"
                        android:layout_marginBottom="20dp"
                        android:layout_width="80dp"
                        android:visibility="gone"
                        android:layout_height="80dp"
                        android:src="@mipmap/ic_pass"

                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_below="@+id/stat_container1"
                    android:id="@+id/res_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="25"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:text="connect hread set to\n to continue"
                        android:textStyle="bold"
                        android:id="@+id/headPhoneUnstructions"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/pic_light_pass"
                        android:layout_below="@+id/cont1"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:id="@+id/pic_success"
                            android:layout_height="60dp"
                            android:visibility="visible"
                            android:src="@mipmap/ic_pass"/>

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"

                    android:layout_below="@id/res_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:weightSum="50"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:paddingTop="10dp"
                            android:gravity="center_horizontal"
                            android:layout_weight="25"
                            android:layout_height="50dp"
                            android:id="@+id/con_head"
                            android:textColor="#ffffff"
                            android:text="Continue"
                            style="@style/Custom_button_2"
                            />

                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

