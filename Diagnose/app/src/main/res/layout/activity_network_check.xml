<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_network_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hyperexchange.diagnose.NetworkCheckActivity">
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:id="@+id/page_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:text="Network Connectivity"
            android:textSize="20sp"
            android:textColor="@color/black9"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/pic_container1"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pic_network"
                android:layout_width="180dp"
                android:src="@color/black9"
                android:layout_height="180dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stat_container1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/pic_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25sp"
                android:id="@+id/label_status"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:text="okokoko"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/pass_net"
               android:layout_marginTop="20dp"
                android:layout_width="80dp"
                android:visibility="gone"
                android:layout_height="80dp"
                android:src="@mipmap/ic_pass"

                />
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_below="@id/stat_container1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:weightSum="50"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:paddingTop="10dp"
                    android:layout_weight="20"
                    android:gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/skipBtn"
                    android:textColor="#ffffff"
                    android:layout_marginRight="10dp"
                    android:text="Skip"
                    style="@style/Custom_button_2"

                    />
                <Button
                    android:paddingTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="25"
                    android:layout_height="50dp"
                    android:id="@+id/net_pass"
                    android:textColor="#ffffff"
                    android:text="Pass"
                    style="@style/Custom_button_2"


                    />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
