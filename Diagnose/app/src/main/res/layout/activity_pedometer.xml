<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pedometer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hyperexchange.diagnose.Pedometer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:id="@+id/page_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Pedo Meter"
                android:textSize="20sp"
                android:textColor="@color/black9"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/pic_container1"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_pedo"
                    android:layout_width="180dp"
                    android:layout_height="180dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stat_container1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@+id/pic_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Walk to get\n Proper result"
                    android:textSize="18sp"

                    />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Number of steps taken"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="---"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp" />

            </LinearLayout>
            <RelativeLayout

                android:layout_below="@id/stat_container1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ok_cont"
                    android:layout_marginTop="5dp"
                    android:weightSum="50"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pass_pedo"
                    android:layout_marginBottom="20dp"
                    android:layout_width="80dp"
                    android:visibility="gone"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_pass"

                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/ok_cont"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:weightSum="50"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:paddingTop="10dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="25"
                        android:layout_height="50dp"
                        android:id="@+id/pedo_con"
                        android:textColor="#ffffff"
                        android:text="Continue"
                        style="@style/Custom_button_2"
                        />

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
